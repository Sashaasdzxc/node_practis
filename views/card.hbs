<h1>Корзина</h1>
<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-csrf="{{@root.csrf}}" data-id={{id}}>Удалить из
                        корзины</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>
        <sttong>Цена:</sttong> <span class="price">{{price}}</span>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
    </p>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>